@top Rule { IfStatement }

IfStatement {
  If Expression Then Identifier
}

Expression {
  Identifier Operator Number
}

@tokens {
  If { "if" }
  Then { "then" }
  Identifier { $[a-zA-Z_] $[a-zA-Z0-9_]* }
  Number { $[0-9]+ ("." $[0-9]+)? }
  Operator { "<=" | ">=" | "==" | "!=" | "<" | ">" }
  WS { $[\s]+ }
}

@skip { WS }
@detectDelim
